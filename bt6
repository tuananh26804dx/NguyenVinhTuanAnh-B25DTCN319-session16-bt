#include <stdio.h>
#include <ctype.h>

int main() {
    char str[] = "Xin chao moi nguoi";
	int i, count = 0;
    for (i = 0; str[i] != '\0'; i++) {
        if (isalpha(str[i]))
            count ++;
    }
    printf("Chuoi: %s\n", str);
    printf("So ky tu la chu cai trong chuoi la: %d\n", count);

    return 0;
}
