#include <stdio.h>
#include <string.h>

int main() {
    char chuoi[1000];

    printf("Nhap mot chuoi bat ky: ");
    fgets(chuoi, sizeof(chuoi), stdin);

    size_t len = strlen(chuoi);
    if (len > 0 && chuoi[len - 1] == '\n') {
        chuoi[len - 1] = '\0';
        len--;
    }

    printf("Chuoi ban vua nhap: %s\n", chuoi);
    printf("Do dai cua chuoi: %zu\n", len);

    return 0;
}


